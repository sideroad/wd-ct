#!/usr/bin/env node

// Run WdCT.
var opts = require('opts'),
    options = {};

opts.parse([
  {
    'short': 't',
    'long': 'testcase',
    'description': 'Target testcase file',
    'value': true,
    'required': true
  },
  {
    'short': 'i',
    'long': 'interaction',
    'description': 'Target interaction file',
    'value': true,
    'required': true
  },
  {
    'short': 'd',
    'long': 'debug',
    'description': 'Debug mode',
  },
  {
    'short': 'b',
    'long': 'browsers',
    'description': 'Browser',
    'value': true
  }
]);

options.testcase = opts.get('testcase');
options.interaction = opts.get('interaction');
options.debug = opts.get('debug') ? true: false;

var browsers = opts.get('browsers');
if(browsers){
  options.browsers =  browsers.split(',');
}

var WdCT = require('../index');
new WdCT( options );
